<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.packtpub.apps.rxjava_essentials.example1.CreateFragment">

    <Button
        android:id="@+id/concat"
        android:textAllCaps="false"
        android:onClick="concat"
        android:text="concat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/concat2"
        android:textAllCaps="false"
        android:onClick="concat2"
        android:text="concat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/groupBy"
        android:textAllCaps="false"
        android:onClick="groupBy"
        android:text="groupBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/groupBy2"
        android:textAllCaps="false"
        android:onClick="groupBy2"
        android:text="groupBy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/groupBy3"
        android:textAllCaps="false"
        android:onClick="groupBy3"
        android:text="groupBy3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/fragment_first_example_swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_first_example_list"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
